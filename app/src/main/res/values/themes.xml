<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="android:textViewStyle">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="ButtonStyleBlue" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/background_blue</item>

    </style>

        <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
            <item name="colorPrimary">@color/green_primary</item>
            <item name="colorPrimaryDark">@color/green_primary_dark</item>
            <item name="colorAccent">@color/green_accent</item>
            <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>

        </style>

        <style name="ButtonStyleGreen" parent="Widget.AppCompat.Button">
            <item name="android:background">@color/background</item>
        </style>

        <style name="TextViewStyleGreen" parent="Widget.AppCompat.TextView">
            <item name="android:textColor">@color/green_text</item>
            <item name="android:textViewStyle">@style/TextAppearance.AppCompat.Display1</item>

        </style>

</resources>

